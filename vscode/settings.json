{
  // editor
  "editor.tabSize": 2,
  "editor.fontFamily": "MesloLGM Nerd Font Mono",
  "editor.defaultFormatter": null,
  "workbench.colorTheme": "Atom One Dark",
  "editor.formatOnSave": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.mouseWheelScrollSensitivity": 4,
  "editor.codeLens": true,
  "outline.showVariables": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "files.encoding": "utf8",
  // Cygwin start with current working directory
  "terminal.integrated.env.windows": {
    "CHERE_INVOKING": "1"
  },
  // indentRainbow
  "indentRainbow.indicatorStyle":  "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.ignoreErrorLanguages": [
    "*"
  ],

  // vim
  "vim.leader": "<space>",
  "vim.vimrc.enable": true,
  "vim.ignorecase": true,
  "vim.smartcase": true,
  "vim.handleKeys": {
    "<C-o>": false,
    "<C-n>": false,
    "<C-p>": false
  },
  "vim.foldfix": true,

  // lint
  // prettier
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.printWidth": 80,

  "[mustache]": {
    "editor.defaultFormatter": "monosans.djlint"
  },

  // sass
  "liveSassCompile.settings.formats":[
      // This is Default.
      {
          "format": "expanded",
          "extensionName": ".css",
          "savePath": null
      },
      // You can add more
      {
          "format": "compressed",
          "extensionName": ".min.css",
          "savePath": "/dist/css"
      },
      // More Complex
      {
          "format": "compressed",
          "extensionName": ".min.css",
          "savePath": "/dist/css"
      }
  ],
  "liveSassCompile.settings.generateMap": false,
  "liveSassCompile.settings.includeItems": [
    "/css/scss/*.scss",
    "/sass/*.scss",
    "/*.scss",
    "/*.sass"
  ],

  // bootstrap for html autocompletion
  "css.styleSheets": [
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css",
    "*.css"
  ],

  "php.inlayHints.parameters.enabled": false,
  // php
  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode",
    "editor.tabSize": 4,
  },
  "files.associations": { "*.module": "php" },
  "php.debug.executablePath": "C:\\wamp64\\bin\\php\\php7.1.33\\php.exe",
  // "intelephense.format.enable": true,
  // "intelephense.format.braces": "k&r",
  // "intelephense.environment.phpVersion": "5.6.40",
  // "php.debug.executablePath": "C:\\wamp64\\bin\\php\\php7.1.33\\php.exe",

  // html
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // javascript
  "[javascript]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4
  },

  // css
  "css.validate": false,
  "[css]": {
    // "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[markdown]": {
    "editor.formatOnSave": false
  },

  // scss

  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "cmake.showOptionsMovedNotification": false,
  "editor.wordWrapColumn": 120,
  "launch": {
    "configurations": [
    
    ]
  },
  "cmake.configureOnOpen": true,
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "diffEditor.ignoreTrimWhitespace": false,
  "outline.collapseItems": "alwaysCollapse",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "scm.inputFontSize": 14,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // todo tree
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.general.tags": [
      "DEBUG",
      "BUG",
      "TODO",
      "WARNING",
      "FIXME",
      "NOTE",
      "CHECKLIST",
      "[ ]",
      "[x]"
    ],
  "todo-tree.highlights.customHighlight": {
    "DEBUG": {
      "background": "#20a904",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "bug",
      "iconColour": "#20a904",
      "type": "text"
    },
    "CHECKLIST": {
      "background": "#20a904",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "check-circle-fill",
      "iconColour": "#20a904",
      "type": "text"
    },
    "NOTE": {
      "background": "#ff0404",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "star-fill",
      "iconColour": "#ffc404",
      "type": "text"
    },
    "TODO": {
      "background": "#b782f9",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "pin",
      "iconColour": "#b782f9",
      "type": "tag"
    },
    "WARNING": {
      "background": "#ffc404",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "alert",
      "iconColour": "#ff9f04"
    },
    "[ ]": {
      "background": "#f87364",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "x",
      "iconColour": "#f87364",
      "type": "tag"
    },
    "[x]": {
      "background": "#20a904",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "icon": "check",
      "iconColour": "#20a904",
      "type": "tag"
    },
    "FIXME": {
      "background": "#EE4B2B",
      "foreground": "#ffffff",
      "gutterIcon": true,
      "iconColour": "#EE4B2B",
    }
  },
  "todo-tree.regex.regex": "((\\*|//|#|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  "extensions.ignoreRecommendations": true,
  "update.mode": "none",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "workbench.startupEditor": "none",

  "[html][django-html][handlebars][hbs][mustache][jinja][jinja-html][nj][njk][nunjucks][twig]": {
    "editor.defaultFormatter": "monosans.djlint"
  },

  // Terminal
  "terminal.integrated.profiles.windows": {
    "Cygwin": {
      "path": "C:\\cygwin64\\bin\\bash.exe",
      "args": ["--login"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "Cygwin",
  "djlint.useNewLinterOutputParser": false,
  "editor.minimap.enabled": false,
  "php.format.codeStyle": "K&R",
  "workbench.panel.defaultLocation": "right",
  "git.openRepositoryInParentFolders": "always",
  "editor.cursorSurroundingLines": 10,
  "terminal.integrated.fontFamily": "monospace",
  "editor.codeLensFontFamily": "MesloLGM Nerd Font Mono",
  "editor.codeLensFontSize": 12,
  "markdown.preview.lineHeight": 1.2,
  "editor.lineHeight": 1.2,
  "editor.wordWrap": "off",
  "editor.unicodeHighlight.ambiguousCharacters": false,
}